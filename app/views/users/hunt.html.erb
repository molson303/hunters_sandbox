<% if !@searching %>

    <%= form_tag(hunt_path, method: "get") do %>
        <%= label_tag(:search_term, "Search for:") %>
        <%= text_field_tag(:search_term) %>
        <%= submit_tag("Search", class: "btn") %>
    <% end %>

<% else %>

    <%= render 'products/search_results', locals: {products: @products} %>

<% end %>