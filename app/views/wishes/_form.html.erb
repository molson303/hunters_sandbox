
<%= form_for(@wish, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :notes do |f| %>
      <%= f.label :notes, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_area :notes, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :user_id do |f| %>
      <%= f.label :user_id, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :user_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :product_id do |f| %>
      <%= f.label :product_id, class: 'form-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :product_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="form-actions col-md-offset-3 col-md-9">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to "Cancel", wishes_path, class: 'btn' %>
  </div>
<% end %>

