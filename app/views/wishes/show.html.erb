<% @title = "Showing wish" %>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-md-2 form-label">Notes</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @wish.notes %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 form-label">User</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @wish.user_id %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 form-label">Product</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @wish.product_id %>
      </span>
    </div>
  </div>

  <div class="form-actions col-md-offset-2">
    <%= link_to icon_tag("pencil") + ' Edit', edit_wish_path(@wish), class: 'btn btn-primary' %>
    <%= link_to 'Back', wishes_path, class: 'btn' %>
  </div>
</div>